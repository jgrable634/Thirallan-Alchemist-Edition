<?xml version="1.0" encoding="utf-8" ?>
<areas>
	<planet id="deathbourne.planet" height="42">
		<orbit id="deahtbourne.orbit" width="406" height="64" background="stars.dwarf.orbit" name="system.planet.robot">
			<spawner id="alien.fighter" time="50000" count="1" fromX="2" toX="402" fromY="10" toY="54" ground="false" />
			<init><runAreaLoad /><action>area.spawner.spawnAll("alien.fighter")</action></init>
			<onLoad><music id="orbit" seconds="1" /><radar tile="orbit.radar" animation="orbit.radar" padding="2" /></onLoad>
		</orbit>
	</planet>
	
	<area id="deathbourne_cave" width="20" height="10" background="black">
		<tiles eval="'markings'+randInt(1,9)" start="0" end="1" />
		<mine start="0" end="1"/>
		<tiles id="bedrock" x="0"/>
		<tiles id="bedrock" y="0"/>
		<tiles id="bedrock" x="19"/>
		<tiles id="bedrock" y="9"/>
		<structure id="deathbourne_cave_exit" x="5" y="5" />
		<object id="alien2.npc" x="17" y="5" />
		<onLoad>
		<section if="area.getObject('alien3') == null">
			<object id="alien3" x="0" y="-1" />
		</section>
		<section if="player.getKillCount('project_calamari') == 0 && area.getObject('alien2.npc') == null">
			<object id="alien2.npc" x="17" y="5" />
		</section>
		</onLoad>
	</area>
</areas>
