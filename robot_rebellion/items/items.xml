	</item>
	<item id="abyssal_blade" type="equipment" slot="weapon" cost="1000" weight="10" attack="21" critical="true" stamina="50" durability="1000" range="1.5" icon="abyssal_blade.ico" repair="exotic_matter">
		<action id="equip" name="equip" />
	</item>
