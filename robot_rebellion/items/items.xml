	<item id="robot_blaster" type="resource" cost="1000" weight="3" animation="robot_blaster" icon="robot_blaster.ico" />
	<item id="robot_whip" type="equipment" slot="weapon" cost="1000" weight="8" attack="12" stamina="15" durability="1000" range="3" icon="robot_whip.ico" repair="titanium">
