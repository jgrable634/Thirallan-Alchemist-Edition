  <npc id="andreas_monastery" mine="4" tile="andreas" action="talk" talk_sfx="talking5">
		<idle class="mineOre"><loot id="coal" /></idle>
    <operate><dialogue section="andreas" id="monastery" speaker='this' /></operate>
