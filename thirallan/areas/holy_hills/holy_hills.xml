      <top y="-10" fromX="10" toX="20" />
      <bottom y="0" fromX="0" toX="30" />
    </shape>
    <tiles id="dirt" start="0" end="1" />
    <tiles id="grass" y="-10" />
  </area>

  <area id="thirallan_holy_hills" width="100" height="100" background="holy_hills" looping="true" planet="thirallan_alchemist">
    <tiles id="dirt" start="0" end="0.5" />
    <tiles id="stone" start="0.5" end="1" />
    <tiles id="grass" y="0" />
    <tiles id="blackstone" y="99" />
    <appendArea id="holy_hills.hill" offsetX="10" offsetY="1" />
    <appendArea id="holy_hills.hill" offsetX="50" offsetY="6" />
    <appendArea id="holy_hills.hill" offsetX="80" offsetY="9" />
